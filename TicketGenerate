<body>
  <div class="container">
    <h2>Ticket Generator</h2>
    <form name="ticketForm" method="POST" data-netlify="true" id="ticketForm">
      <input type="hidden" name="form-name" value="ticketForm">

      <label for="name">Full Name</label>
      <input type="text" id="name" name="Name" required />

      <label for="aadhaar">Aadhaar Card Number</label>
      <input type="text" id="aadhaar" name="AadhaarNumber" pattern="[0-9]{12}" title="Enter 12-digit Aadhaar number" required />

      <label for="pan">PAN Card Number</label>
      <input type="text" id="pan" name="PANNumber" pattern="[A-Z]{5}[0-9]{4}[A-Z]{1}" title="Enter valid PAN format" required />

      <label for="txn">Transaction ID</label>
      <input type="text" id="txn" name="TransactionID" required />

      <input type="hidden" id="ticketId" name="TicketID" />

      <button type="button" onclick="generateTicket()">Generate Ticket</button>

      <div class="ticket-info" id="ticketInfo">
        <h3>ðŸŽŸ Ticket Generated!</h3>
        <p><strong>Ticket ID:</strong> <span id="ticketDisplay"></span></p>
      </div>
    </form>
  </div>

  <script>
    function generateTicket() {
      const name = document.getElementById('name').value.trim();
      const aadhaar = document.getElementById('aadhaar').value.trim();
      const pan = document.getElementById('pan').value.trim();
      const txn = document.getElementById('txn').value.trim();

      if (!name || !aadhaar || !pan || !txn) {
        alert("Please fill all fields before generating the ticket!");
        return;
      }

      // Generate unique Ticket ID
      const ticketID = "TKT-" + Date.now().toString(36).toUpperCase() + "-" + Math.random().toString(36).substr(2, 5).toUpperCase();

      // Set the ticketID into hidden field
      document.getElementById('ticketId').value = ticketID;
      document.getElementById('ticketDisplay').innerText = ticketID;
      document.getElementById('ticketInfo').style.display = "block";

      // Submit the form to Netlify after short delay
      setTimeout(() => {
        document.getElementById('ticketForm').submit();
      }, 1000);
    }
  </script>
